#!/bin/sh

[ $WM = "bspwm" ] && BLOCK_BUTTON=$1

case $BLOCK_BUTTON in
	1) rund $TERMINAL -c st-256color-ur -e $STATUSBAR_AUX_BIN/popupgrade ;;
esac

while : ; do 
	updates=`checkupdates`
	[ $? -eq 1 ] || break
	sleep `shuf -i 0-10 -n 1` 
done

pack_num=`echo "$updates" | sed "/^$/d" | grep -v "\[ignored\]" | wc -l | sed "s/^//;s/^0$//g"`

if [ -z "$pack_num" ]; then
	echo "ðŸ“¦ 0"
else
	echo "ðŸ“¦ $pack_num"
fi
